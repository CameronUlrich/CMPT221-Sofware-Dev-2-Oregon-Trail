var http = require('http'),
    fs = require('fs');



fs.readFile('./index.html', function (err, html) {
    if (err) {
        throw err; 
        console.log("Failed!")
    }       
    http.createServer(function(request, response) {  
        response.writeHeader(200, {"Content-Type": "text/html"});  
        response.write(html);  
        response.end();  
    }).listen(1337);
});
console.log("Success!")